generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  tel      String
  name     String?
  photoURL String?
}

model Category {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique

  items Item[]
}

model Item {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  category       Category @relation(fields: [categoryId], references: [id])
  categoryId     String   @db.ObjectId
  priority       Boolean  @default(false)
  description    String
  quantity       Int
  targetQuantity Int
  imageURL       String
}

enum Trend {
  DECREASE
  INCREASE
  CONSTANT
}

model Email {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
}

model Description {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  text String
}
