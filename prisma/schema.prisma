generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  tel   String 
  name    String?
  photoURL String?
}

model Item {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  category Category
  description String
  quantity Int 
  targetQuantity Int
  imageURL String
  inventory Inventory[]
}

model Inventory {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  itemId String @db.ObjectId
  item Item @relation(fields: [itemId], references: [id])
  quantity Int
  date DateTime
  trend Trend @default(CONSTANT)
}

enum Trend {
  DECREASE
  INCREASE
  CONSTANT
}

enum Category {
  FOOD_SUPPLIES
  CLEANING_SANITIZING
  HYGIENE
  MEDICINE
}
